block content
    block sidebar
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="music") Music File
        input(type="file", accept="audio/*", id="music", name="music", required)
        //- input(type="text", name="hashtags")
        label(for="rain") Rain
        input(name="hashtags",placeholder="Create a hashtag", type="checkbox" id="rain" value="rain")
        label(for="clouds") Clouds
        input(name="hashtags",placeholder="Create a hashtag", type="checkbox" id="clouds" value="clouds")
        label(for="clear") Clear
        input(name="hashtags",placeholder="Create a hashtag", type="checkbox" id="clear" value="clear")
        input(type="submit", value="Upload Music")