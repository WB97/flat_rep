extends ../base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="music") Music File 
        input(type="file", accept="audio/*", id="music", name="music", required)
        input(name="name",placeholder="Music Name", required, type="text")
        input(name="artist",placeholder="Artist Name", required, type="text", maxlength=50)
        input(name="hashtags",placeholder="Hashtags, separated by comma.", required, type="text")
        input(type="submit", value="Upload Music")